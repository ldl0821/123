extends ../../../../../views/layout

append headcss
  link(type='text/css',href='./css/bootstrap-select.css',rel='stylesheet')
  link(type='text/css',href='./Report/web/css/status.css',rel='stylesheet')
  style(type='text/css').
    #allcheck_PlanNo {
      margin-top: 0px;
    }
    #allcheck_Shift {
      margin-top: 0px;
    }

append headjavascript
  script(type='text/javascript',src='./Report/web/controller/paReportCtrl.js')
  script(type='text/javascript',src='../Statement/web/controller/bootstrap-select.js')



block content
    .row-fluid
      .span12
        ul.breadcrumb
          li
            i.icon-home
            a(href='/') #{lang.EmployeePerformance.Home}
            i.icon-angle-right
          li
            a(href='javascript:;', data-lang='System') #{lang.Report.Report}
            i.icon-angle-right
          li
            a(href='javascript:;', data-lang='AccountManage') #{lang.Report.ReportDerived}
    #path(hidden) #{report}
    .row-fluid(ng-controller='reportctrl')
      table(width='100%', cellpadding='0', cellspacing='0')
        tr
          td(style='width: 240px;')
            table.table.table-bordered.table-condensed(style='border-color:#C5C5C5;', cellpadding='0', cellspacing='0', border='0', width='100%', height='100%')
              tr
                td.k-header(style='border-color: rgb(197, 197, 197); padding: 6px 7px 5px;')
                  a.k-link(tabindex='-1', href='#') #{lang.Report.ReportList}
              tr
                td(style='border-color: rgb(197, 197, 197); height: 468px; padding: 0px;')
                  div(style='height: 500px; overflow-y: auto; padding-top :5px; padding-left: 4px; padding-bottom: 5px;')
                    #orgnizetree
          td(valign='top', style='padding-left:5px;')
            table.table.table-bordered.table-condensed(style='border-color:#C5C5C5;', cellpadding='0', cellspacing='0', border='0', width='100%', height='100%')
              tr
                td.k-header(style='border-color: rgb(197, 197, 197); padding: 6px 7px 5px;')
                  a.k-link(tabindex='-1', href='#') #{lang.Report.ReportQuery}
              tr
                td(style='border-color: rgb(197, 197, 197); height: 510px; padding: 0px;')
                  form#searchPars.form-horizontal(style='min-width: 298px;padding-left:20px;')
                    .row-fluid
                      div.bothfloat
                          .span(style='width: 315px !important;')
                              .control-group(style='margin-bottom: 5px;')
                                  label.control-label(data-lang='Common.PASSWORD',style='margin-right:10px') #{lang.Alarm.MachineGroup}
                                  input(type="text" id="MAC_NBRname"  name="MAC_NBRname" class="span6 m-wrap")
                          .span(style='width: 350px !important;')
                              .control-group(style='margin-bottom: 5px;')
                                  label.control-label(data-lang='Common.PASSWORD',style='margin-right:10px') #{lang.Alarm.MachineName}
                                  select(multiple  id="my-select" data-live-search-placeholder="搜索" title="" data-actions-box="true" class='selectpicker')
                      div.bothfloat
                        .span(style='width: 314px !important;')
                            .control-group(style='margin-bottom: 5px;')
                                label.control-label(data-lang='Common.PASSWORD',style='margin-right:10px') #{lang.Alarm.MachineNo}
                                select(multiple  id="my-selects" data-live-search-placeholder="搜索" title="" data-actions-box="true" class='selectpicker')
                        .span#reportSpan(style='padding-left:0px')
                            .control-group(style='margin-bottom: 5px;')
                                label.control-label(data-lang='Common.PASSWORD') 导出类型
                                .BZcontrols(style="position:relative;")
                                    select#reportType(style="height:34px;width:208px;")
                                      option(value="1") 默认
                                      option(value="2") 自定义天
                                      option(value="2") 时间段
                                      option(value="3") 班次
                                    span#typeAlarm(style="position:absolute;color:red;width:310px;font-size:12px;left:0px;top:30px;")
                        .span#PeriodTime(class="hiddenDom")
                            .control-group(style='margin-bottom: 5px;margin-left:-20px;')
                                label.control-label(data-lang='Common.PASSWORD',style='margin-right:10px') 开始~结束
                                .BZcontrols
                                  input#startPeriodTime.m-wrap(type='text', name='startPeriodTime')
                                .BZcontrols(style="margin-left:190px;")
                                  span(style="padding-right:5px;") ~
                                  input#endPeriodTime.m-wrap(type='text', name='endPeriodTime')
                               
                      div#NoZDY_Day.bothfloat
                        .span(style='width:300px !important')
                          .control-group(style='margin-bottom: 5px;')
                              label.control-label(data-lang='Common.PASSWORD',style="width:87px") #{lang.EmployeePerformance.StartTime}
                              .BZcontrols
                                  input#startTime.m-wrap(type='text', name='startTime')
                        .span(style='padding-left:0px')
                            .control-group(style='margin-bottom: 5px;padding-left:15px;')
                                label.control-label(data-lang='Common.PASSWORD') #{lang.EmployeePerformance.EndTime}
                                .BZcontrols
                                    input#endTime.m-wrap(type='text', name='endTime') 
                      div#ZDY_Day.hiddenDom.bothfloat
                        .span(style='width:300px !important')
                          .control-group(style='margin-bottom: 5px;')
                              label.control-label(data-lang='Common.PASSWORD',style="width:87px") #{lang.EmployeePerformance.StartTime}
                              .BZcontrols
                                  input#startTime2.m-wrap(type='text', name='startTime2')
                        .span(style='padding-left:0px')
                            .control-group(style='margin-bottom: 5px;padding-left:15px;')
                                label.control-label(data-lang='Common.PASSWORD') #{lang.EmployeePerformance.EndTime}
                                .BZcontrols
                                    input#endTime2.m-wrap(type='text', name='endTime2')        
                      div.bothfloat
                          .span(style='padding-left:0px;')
                            .control-group(style='margin-bottom: 10px;')
                                .BZcontrols(style='line-height: 32px;')
                                    button.btn.green(id='searchData',style='margin-left:0px;width:208px;',ng-click='search()') 导出
                                        i.icon-search
    //----------------------------模板  
    script#treeview-template(type='text/kendo-ui-template').
      <i class="#:item.icon#"></i>
      <span attr="treenode">#:item.text#</span>
    script(type='text/javascript').
       var config = !{JSON.stringify(config)};
    script#treeview-templates(type='text/kendo-ui-template').
        <i class="#:item.icon#"></i>
        <span nodeid="#:item.id#" pid="#:item.PID#"  onclick='addOnClick(this)' level_nbr="#:item.LEVEL_NBR#" attr="treenode" flag="#:item.flag#">#:item.text#</span>
